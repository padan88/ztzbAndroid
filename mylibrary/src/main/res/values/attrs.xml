<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--CommonRecyclerView-->
    <declare-styleable name="CommonRecyclerView">
        <!--        横向滑动速率-->
        <attr name="recyclerSpeedX" format="float" />
        <!--        纵向滑动速率-->
        <attr name="recyclerSpeedY" format="float" />
    </declare-styleable>

    <!--自定义Toolbar控件-->
    <declare-styleable name="CommonToolbar">
        <!--背景颜色-->
        <attr name="toolbarBackground" format="reference" />
        <!--标题类型-->
        <attr name="toolbarTitleType" format="enum" >
            <!--什么都没有-->
            <enum name="NONE" value="-1" />
            <!--文字-->
            <enum name="TEXT" value="1" />
            <!--图片-->
            <enum name="IMAGE" value="2" />
            <!--一个布局-->
            <enum name="VIEW" value="3" />
        </attr>
        <!--标题文字-->
        <attr name="toolbarTitle" format="string" />
        <!--标题文字大小-->
        <attr name="toolbarTitleSize" format="dimension" />
        <!--标题文字颜色-->
        <attr name="toolbarTitleColor" format="color" />
        <!--标题图片-->
        <attr name="toolbarTitleImg" format="reference" />
        <!--标题图片 宽度-->
        <attr name="toolbarTitleImgWidth" format="dimension" />
        <!--标题图片 高度-->
        <attr name="toolbarTitleImgHeight" format="dimension" />

        <!--左边布局类型-->
        <attr name="toolbarLeftType" format="enum">
            <!--什么都没有-->
            <enum name="NONE" value="-1" />
            <!--文字-->
            <enum name="TEXT" value="1" />
            <!--图片-->
            <enum name="IMAGE" value="2" />
            <!--一个布局-->
            <enum name="VIEW" value="3" />
        </attr>
        <!--左边图片-->
        <attr name="toolbarLeftImg" format="reference" />
        <!--左边图片 宽度-->
        <attr name="toolbarLeftImgWidth" format="dimension" />
        <!--左边图片 高度-->
        <attr name="toolbarLeftImgHeight" format="dimension" />
        <!--左边文字-->
        <attr name="toolbarLeftText" format="string" />
        <!--左边文字大小-->
        <attr name="toolbarLeftTextSize" format="dimension" />
        <!--左边文字颜色-->
        <attr name="toolbarLeftTextColor" format="color" />

        <!--右边图片-->
        <attr name="toolbarRightImg" format="reference" />
        <!--右边图片 宽度-->
        <attr name="toolbarRightImgWidth" format="dimension" />
        <!--右边图片 高度-->
        <attr name="toolbarRightImgHeight" format="dimension" />
        <!--右边文字-->
        <attr name="toolbarRightText" format="string" />
        <!--右边文字大小-->
        <attr name="toolbarRightTextSize" format="dimension" />
        <!--右边文字颜色-->
        <attr name="toolbarRightTextColor" format="color" />
        <!--右边布局类型-->
        <attr name="toolbarRightType" format="enum">
            <!--什么都没有-->
            <enum name="NONE" value="-1" />
            <!--文字-->
            <enum name="TEXT" value="1" />
            <!--图片-->
            <enum name="IMAGE" value="2" />
            <!--一个布局-->
            <enum name="VIEW" value="3" />
        </attr>

        <!--分隔线颜色-->
        <attr name="toolbarDividerColor" format="color" />
        <!--是否显示分隔线-->
        <attr name="toolbarDividerVisibility" format="enum">
            <enum name="GONE" value="0" />
            <enum name="VISIBLE" value="1" />
        </attr>
    </declare-styleable>

</resources>